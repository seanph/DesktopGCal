<UserControl x:Class="Seanph.Calendar.Controls.CalendarDay"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignWidth="450" Width="Auto" MinHeight="56">
    <Border BorderBrush="Black" BorderThickness="0,0,0,2" Height="Auto" Width="450">
        <Grid RenderTransformOrigin="0.453,0.525" Margin="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="350"/>
            </Grid.ColumnDefinitions>
            <TextBlock x:Name="lblDay" HorizontalAlignment="Left" Margin="10,0,0,0" TextWrapping="Wrap" Text="Day" VerticalAlignment="Top" FontWeight="Bold" FontSize="24" Height="31" Width="69"/>
            <TextBlock x:Name="lblDate" HorizontalAlignment="Left" Margin="10,32,0,0" TextWrapping="Wrap" Text="00 Month" VerticalAlignment="Top" Width="78" Height="15"/>
            <StackPanel x:Name="stkPnl" Grid.Column="1" Height="auto" Width="350"/>
            <Border BorderBrush="Black" BorderThickness="0,0,1,0" Height="auto" Width="100"/>
        </Grid>
    </Border>
</UserControl>
